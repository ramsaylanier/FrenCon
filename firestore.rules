rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Authenticated users can read/write convention data
    match /roundtableIdeas/{docId} {
      allow read, write: if request.auth != null;
    }
    match /gameNominations/{docId} {
      allow read, write: if request.auth != null;
    }
    match /ttrpgNominations/{docId} {
      allow read, write: if request.auth != null;
    }
    match /pollResponses/{docId} {
      allow read, write: if request.auth != null;
    }
    match /merchIdeas/{docId} {
      allow read, write: if request.auth != null;
    }
    match /videos/{docId} {
      allow read: if true;  // Public read for videos
      allow write: if request.auth != null;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read all profiles (for display names in tables); write only own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Authenticated users can read/write convention data
    match /roundtableIdeas/{docId} {
      allow read, write: if request.auth != null;
    }
    match /boardGames/{docId} {
      allow read, write: if request.auth != null;
    }
    match /ttrpgs/{docId} {
      allow read, write: if request.auth != null;
    }
    match /userVotes/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
    }
    match /pollResponses/{docId} {
      allow read, write: if request.auth != null;
    }
    match /merchIdeas/{docId} {
      allow read, write: if request.auth != null;
    }
    match /videos/{docId} {
      allow read: if true;  // Public read for videos
      allow write: if request.auth != null;
    }
  }
}

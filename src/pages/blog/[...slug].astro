---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: Awaited<ReturnType<typeof getCollection>>[number];
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - FrenCon 2026`} description={entry.data.description}>
  <article>
    <h1>{entry.data.title}</h1>
    <p>
      <time datetime={entry.data.pubDate.toISOString()}>
        {entry.data.pubDate.toLocaleDateString()}
      </time>
      {entry.data.author && ` â€” ${entry.data.author}`}
    </p>
    <Content />
  </article>
</Layout>
